{
  "name": "dark-magician-bot",
  "version": "1.0.0-beta",
  "description": "A Yu-Gi-Oh! Card Trading Bot",
  "author": "whoastonic <kingstonicthe1@gmail.com>",
  "scripts": {
    "prebuild": "rm -rf packages/**/build",
    "build": "npm run prebuild && lerna run build --no-bail",
    "test": "lerna run test --no-bail",
    "lint": "lerna run lint --no-bail",
    "lint:fix": "lerna run lint --no-bail -- -- --fix",
    "bootstrap": "lerna bootstrap",
    "reinstall": "yarn clean && yarn",
    "postinstall": "yarn bootstrap",
    "clean": "lerna clean --yes && rm -rf ./node_modules"
  },
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@alex-taxiera/eslint-config-ts": "^1.0.3",
    "@ava/typescript": "^1.1.1",
    "@types/node": "^14.0.13",
    "@types/sinon": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "ava": "^3.9.0",
    "eslint": "^7.3.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-modules-newline": "^0.0.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "lerna": "^3.22.1",
    "nyc": "^15.1.0",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.10",
    "typescript": "^3.9.5"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "tsconfig-paths/register",
      "ts-node/register"
    ]
  }
}
