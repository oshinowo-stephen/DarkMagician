{
  "name": "@darkmagician/api",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "ttsc",
    "lint": "eslint src --ext ts",
    "pretest": "export TS_NODE_FILES=true",
    "start:dev": "ts-node-dev src/index.ts",
    "migration:latest": "typeorm migration:run",
    "types:generate": "ts-node src/bin/dtsgen.ts",
    "test": "yarn pretest ; nyc --reporter lcov ava",
    "migration:create": "typeorm migration:create -n ",
    "swagger:validate": "swagger-cli validate doc/index.yml",
    "swagger:bundle": "swagger-cli bundle -t yaml -o docs.yml doc/index.yml"
  },
  "files": [
    "index.d.ts",
    "docs.yml"
  ],
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.3",
    "@darkmagician/common": "^1.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/helmet": "^0.0.47",
    "@types/js-yaml": "^3.12.5",
    "dtsgenerator": "^3.1.1",
    "js-yaml": "^3.14.0"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.23.2",
    "pg": "^8.2.1",
    "typeorm": "^0.2.25"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "tsconfig-paths/register",
      "ts-node/register"
    ]
  }
}
