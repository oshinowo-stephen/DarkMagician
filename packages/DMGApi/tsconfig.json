{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./",
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@*": [
        "*"
      ]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
  },
  "include": [
    "src",
    "test",
    "index.d.ts"
  ]
}
